<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto pt-3">
      <h2>User Info</h2>

      <% if @user.errors.any? %>
      <div id = "error_explanation">
        <h3><%= pluralize(@user.errors.count, "error") %> prohibitted this. obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>


      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, id:"inputName", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
      </div>
  
      <div class="form-group">  
        <label for="inputintroduction">Introduction</label>
        <%= f.text_area :introduction, id:"inputintroduction", class: "form-control" %>
      </div>
  
      <div class="form-group"></div>
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>