<h2>User Info</h2>

<% if @user.errors.any? %>
  <div id = "error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibitted this. obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>


<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, id:"inputName" %>
  
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  
  <label for="inputintroduction">Introduction</label>
  <%= f.text_field :introduction, id:"inputintroduction" %>
  
  <%= f.submit 'Update User' %>
<% end %>