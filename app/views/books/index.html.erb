<h2>User Info</h2>
<tbody>
  <% @books.each do |book| %>
  <tr><%= image_tag book.user.get_profile_image(100,100) %></tr>
  <tr>
    <th>name</th>
      <td><%= book.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
      <td><%= book.introduction %></td>
  </tr>
  <% end %>
</tbody>

<% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
<% end %>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<footer>
  <p>CopyRight Infratop.inc</p>
</footer>
