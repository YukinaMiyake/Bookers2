<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>


<%= render partial: 'list', locals: { user: @user, book: @book } %> 

<h2>Book detail</h2>
<table>
  <tbody>
  <td><%= image_tag @users.get_profile_image(100,100) %><br />
      <p><%= link_to @users.name, user_path(@users.id) %></p></td>
  <td><%= @books.title %></td>
  <td><%= @books.body %></td>
    <% if @books.user == current_user %>
  <td><%= link_to 'Edit', edit_book_path(@books.id) %></td>
  <td><%= link_to 'Destroy', book_path, method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
  </tbody>
</table>
