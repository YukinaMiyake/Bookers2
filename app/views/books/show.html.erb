<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>

<%= render partial: 'list', locals: { user: @user, book: @book } %> 

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
    <td><%= image_tag @books.user.get_profile_image(100,100) %><br />
      <p><%= link_to @books.user.name, user_path(@user.id) %></p></td>
    <td><%= @books.title %></td>
    <td><%= @books.body %></td>
      <% if @books.user == current_user %>
    <td><%= link_to 'Edit', edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
    <td><%= link_to 'Destroy', book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
      <% end %>
    </tbody>
  </table>
</div>

  </div>
</div>
