<h1>Editing Book</h1>

<%  if @book.errors.any? %>
  <div id ="error_explanation">
    <h3><%= pluralize(@book.errors.count, "error") %> prohibitted this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class = "edit-field">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  
  <div class = "edit-field">
    <%= f.label :Opinion %>
    <%= f.text_area :body %>
  </div>
  
  <%= f.submit 'Update Book' %>
<% end %>

<span><%= link_to 'Show', book_path(@book.id) %></span>
<span><%= link_to 'Back', books_path %></span>
