<h2>User Info</h2>
<table>
<tbody>
  <tr><%= image_tag user.get_profile_image(100,100) %></tr>
  <tr>
    <th>name</th>
      <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
      <td><%= user.introduction %></td>
  </tr>
</tbody>
</table>
<% if user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
<% end %>

<h2>New Book</h2>
<%= form_with model: book, url:'/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>